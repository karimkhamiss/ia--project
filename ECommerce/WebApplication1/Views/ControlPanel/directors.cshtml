
@{
    ViewBag.Title = "Directors";
    Layout = "~/Views/Shared/_control-panel-1.cshtml";
}
@model IEnumerable<object>
@{
    List<WebApplication1.Models.User> directors = Model.ToArray()[0] as List<WebApplication1.Models.User>;
}
@section popups
{
    @Html.Partial("../forms/users/add")
    @Html.Partial("../forms/users/update")
    @Html.Partial("../forms/users/delete")
}
<section class="directors" id="directors">
    <div class="container-fluid">
        <h2 class="section-title">
            Directors
        </h2>
        <div class="directors-contents">
            <div class="input-container col-md-10">
                <label for="search" class="input-label">Search For Project</label>
                <input type="text" class="cards-search" id="search">
            </div>
            <button data-popup="add-user" class="red-btn col-md-2">
                Add
            </button>
            <div class="clearfix"></div>
            <div class="cards">
                @foreach(var director in directors)
                    {
                <div class="card">
                    <div class="image">
                        <div class="background"></div>
                        @if (director.picture == null)
                        {
                            <img src="~/Content/img/users/default.gif">
                        }
                        else
                        {
                            <img src="~/Content/img/users/@director.picture">
                        }
                        <div class="options">
                            <a data-popup="delete-user" data-id="@director.id"><button class="sm-btn red-btn rounded-btn"><i class="fa fa-close"></i></button></a>
                            <a href="/User/Profile"><button class="sm-btn red-btn rounded-btn"><i class="fa fa-eye"></i></button></a>
                        </div>
                    </div>
                    <div class="caption">
                        <h3>@director.first_name @director.last_name</h3>
                        <h4>@director.Role.name</h4>
                    </div>
                </div>
                    }
            </div>
        </div>

    </div>
</section>

